<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/corner_background</item>
    </style>

    <style name="UploadButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/upload_background</item>


    </style>

    <style name="ContinueButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/continue_bacground</item>


    </style>
    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#AFAFAF</item>
        <item name="colorAccent">#AFAFAF</item>
        <item name="android:colorBackground">#F1F2F5</item>
    </style>

    <!-- Edit Text Styles -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText"></style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout" />

    <!--Textview-->
    <style name="TextStyle.Toolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.ToolbarSmall" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="ButtonStyleInspect" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/corner_background</item>
    </style>

</resources>
